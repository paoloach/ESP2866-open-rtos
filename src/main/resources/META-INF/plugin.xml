<idea-plugin>
    <id>plugin.achdjian.it.ESP2866</id>
    <name>ESP2866 plugin</name>
    <vendor email="pachdjian@gmail.com"></vendor>

    <description><![CDATA[
    Develop an entire ESP2866 free rtos C project inside CLion<br>

Disclaimer
<br>
<ul>
    <li>No warranties, you are using the plugin at your own risk.</li>
</ul>
<br>
    ]]></description>


    <change-notes>
    </change-notes>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <depends>com.intellij.modules.clion</depends>


    <extensions defaultExtensionNs="com.intellij">
        <directoryProjectGenerator implementation="esp8266.plugin.achdjian.it.wizard.free.rtos.ESP8266FreeRTOSProjectGenerator"/>
        <directoryProjectGenerator implementation="esp8266.plugin.achdjian.it.wizard.espressif.rtos.ESP8266EspressifRTOSProjectGenerator"/>
        <!--<configurationType implementation="plugin.achdjian.it.ESP2866SDKSettings" id="esp2866.plugin.achdjian.it"/>-->
        <projectConfigurable order="last" id="ESP2866.plugin.achdjian.it"
                             instance="esp8266.plugin.achdjian.it.settings.ESP2866SDKSettings"
                             displayName="ESP2866 config" groupId="build.tools"/>

    </extensions>

    <actions>
    </actions>

    <application-components>
        <component>
            <implementation-class>esp8266.plugin.achdjian.it.settings.ESP8266SettingsState</implementation-class>
        </component>
    </application-components>
</idea-plugin>